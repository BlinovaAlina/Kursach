<Window x:Class="Курсовая.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="514*"/>
            <ColumnDefinition Width="155*"/>
            <ColumnDefinition Width="131*"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="Caterory_border" BorderThickness="1" HorizontalAlignment="Left" Height="61" Margin="56,195,0,0" VerticalAlignment="Top" Width="203" Grid.Column="1" Grid.ColumnSpan="2"/>

        <Button x:Name="AddWord_button" Content="Добавить слово" HorizontalAlignment="Left" Height="105" Margin="146,80,0,0" VerticalAlignment="Top" Width="103" Click="AddWord_button_Click" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label Content="Кол-во правильных ответов:" HorizontalAlignment="Left" Height="29" Margin="474,80,0,0" VerticalAlignment="Top" Width="173" Grid.ColumnSpan="2"/>
        <Label x:Name="englishword_label" Content="Label" Height="61" Margin="124,138,0,0" VerticalAlignment="Top" Width="121" HorizontalAlignment="Left" FontSize="20"/>
        <Label x:Name="translationvar1_label" Content="Label" HorizontalAlignment="Left" Height="42" Margin="34,273,0,0" VerticalAlignment="Top" Width="103" MouseLeftButtonDown="translationvar1_label_MouseLeftButtonDown" BorderThickness="2,2,2,2"/>
        <Label x:Name="translationvar2_label" Content="Label" HorizontalAlignment="Left" Height="42" Margin="142,273,0,0" VerticalAlignment="Top" Width="103" MouseLeftButtonDown="translationvar2_label_MouseLeftButtonDown" BorderThickness="2,2,2,2"/>
        <Label x:Name="translationvar3_label" Content="Label" HorizontalAlignment="Left" Height="42" Margin="280,273,0,0" VerticalAlignment="Top" Width="103" MouseLeftButtonDown="translationvar3_label_MouseLeftButtonDown_1" BorderThickness="2,2,2,2"/>
        <Label Content="Категории слов:" HorizontalAlignment="Left" Height="34" Margin="471,208,0,0" VerticalAlignment="Top" Width="121" Grid.ColumnSpan="2"/>
        <Button x:Name="Save_button" Content="Сохранить" HorizontalAlignment="Left" Height="49" Margin="474,329,0,0" VerticalAlignment="Top" Width="133" Click="Save_button_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="Load_button" Content="Загрузить" HorizontalAlignment="Left" Height="49" Margin="116,329,0,0" VerticalAlignment="Top" Width="133" Click="Load_button_Click" Grid.Column="1" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="Category_ComboBox" HorizontalAlignment="Left" Height="46" Margin="64,202,0,0" VerticalAlignment="Top" Width="185" SelectionChanged="Category_ComboBox_SelectionChanged" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Label x:Name="rightwords_label" Content="Label" HorizontalAlignment="Left" Height="29" Margin="474,109,0,0" VerticalAlignment="Top" Width="42" Grid.ColumnSpan="2"/>
        <Label Content="Кол-во неправильных ответов:" HorizontalAlignment="Left" Height="29" Margin="474,138,0,0" VerticalAlignment="Top" Width="181" Grid.ColumnSpan="2"/>
        <Label x:Name="wrongwords_label" Content="Label" HorizontalAlignment="Left" Height="29" Margin="474,167,0,0" VerticalAlignment="Top" Width="42" Grid.ColumnSpan="2"/>
        <Button x:Name="NextWord_button" Content="Следующее слово" HorizontalAlignment="Left" Height="48" Margin="208,42,0,0" VerticalAlignment="Top" Width="133" Click="NextWord_button_Click"/>
        <Button x:Name="Start_button" Content="Старт" HorizontalAlignment="Left" Height="48" Margin="34,42,0,0" VerticalAlignment="Top" Width="133" Click="Start_button_Click"/>

    </Grid>
</Window>
