<Window x:Class="Курсовая.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая"
        mc:Ignorable="d"
        Title="Window1" Height="299" Width="324">
    <Grid Margin="0,0,0,5">

        <TextBox x:Name="EnglishWord_textbox" HorizontalAlignment="Left" Height="43" Margin="33,153,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="124"/>
        <TextBox x:Name="RussianWord_textbox" HorizontalAlignment="Left" Height="43" Margin="162,153,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="124"/>
        <ComboBox x:Name="Category_ComboBox" HorizontalAlignment="Left" Height="46" Margin="61,58,0,0" VerticalAlignment="Top" Width="198"/>
        <Label Content="Английское слово:" HorizontalAlignment="Left" Height="33" Margin="33,115,0,0" VerticalAlignment="Top" Width="124"/>
        <Label Content="Русское слово:" HorizontalAlignment="Left" Height="33" Margin="162,115,0,0" VerticalAlignment="Top" Width="124"/>
        <Label Content="Категория:" HorizontalAlignment="Left" Height="24" Margin="62,29,0,0" VerticalAlignment="Top" Width="122"/>
        <Button x:Name="AddMore_button" Content="Добавить ещё" HorizontalAlignment="Left" Height="34" Margin="33,201,0,0" VerticalAlignment="Top" Width="124" Click="AddMore_Click"/>
        <Button x:Name="AddAndClose_button" Content="Добавить и закрыть" HorizontalAlignment="Left" Height="34" Margin="162,201,0,0" VerticalAlignment="Top" Width="124" Click="AddAndClose_button_Click"/>

    </Grid>
</Window>
