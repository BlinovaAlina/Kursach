<Window x:Class="Курсовая.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовая"
        mc:Ignorable="d"
        Title="Window1" Height="299" Width="324">
    <Grid Margin="0,0,10,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="279*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="EnglishWord_textbox" HorizontalAlignment="Left" Height="43" Margin="3,143,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="124" Grid.Column="1"/>
        <TextBox x:Name="RussianWord_textbox" HorizontalAlignment="Left" Height="43" Margin="132,143,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="124" Grid.Column="1"/>
        <ComboBox x:Name="Category_ComboBox" HorizontalAlignment="Left" Height="46" Margin="31,48,0,0" VerticalAlignment="Top" Width="198" Grid.Column="1"/>
        <Label Content="Английское слово:" HorizontalAlignment="Left" Height="33" Margin="3,105,0,0" VerticalAlignment="Top" Width="124" Grid.Column="1"/>
        <Label Content="Русское слово:" HorizontalAlignment="Left" Height="33" Margin="132,105,0,0" VerticalAlignment="Top" Width="124" Grid.Column="1"/>
        <Label Content="Категория:" HorizontalAlignment="Left" Height="24" Margin="32,19,0,0" VerticalAlignment="Top" Width="122" Grid.Column="1"/>
        <Button x:Name="AddMore_button" Content="Добавить ещё" HorizontalAlignment="Left" Height="34" Margin="3,191,0,0" VerticalAlignment="Top" Width="124" Grid.Column="1" Click="AddMore_Click"/>
        <Button x:Name="AddAndClose_button" Content="Добавить и закрыть" HorizontalAlignment="Left" Height="34" Margin="132,191,0,0" VerticalAlignment="Top" Width="124" Grid.Column="1" Click="AddAndClose_button_Click"/>

    </Grid>
</Window>
